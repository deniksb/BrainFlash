{
    "name": "BrainFlash",
    "version": "0.1",
    "description": "Paste your text and let it be flashed into your brain.",

     "icons": {"128": "nakata_icon.png"},
     "browser_action": {
      "default_icon": "nakata_icon.png",
      "default_popup": "popup.html"
     },

     "background": {
      "persistent": true,
      "scripts": ["background.js"]
     },
     
    "manifest_version": 2,
    "permissions": ["tabs","activeTab","contextMenus"]
  }